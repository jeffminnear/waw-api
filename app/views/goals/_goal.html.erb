<div id="goal-<%= goal.id %>" class="media">
  <div class="media-body">
    <div class="goal goal-<%= urgency(goal) %>">
      <h4 class="media-heading">
        <%= goal.name %>
      </h4>
      <%= button_to "Completed", goal_path(goal),
      method: :delete, data: { :"delete-goal-button" => true, :"goal-id" => goal.id  } %>

      <%#= link_to "Completed", goal, method: :delete, remote: true, class: 'glyphicon glyphicon-ok' %>
      <small><%= time_left_to_complete(goal) %> left to complete</small>
    </div>
  </div>
</div>
